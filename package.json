{
  "name": "charts",
  "version": "0.11.1",
  "description": "Charting view for a workspace.",
  "main": "./src/main",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "via",
    "trading"
  ],
  "repository": "https://github.com/via-platform/charts",
  "author": "Dakota Gordon",
  "dependencies": {
    "etch": "^0.12.5",
    "moment": "^2.20.1",
    "moment-duration-format": "^2.2.2",
    "underscore-plus": "^1.6.6"
  },
  "engines": {
    "via": "^0.9.1-alpha"
  },
  "deserializers": {
    "Chart": "deserialize"
  },
  "configSchema": {
    "defaultChartType": {
      "type": "string",
      "default": "candlestick",
      "description": "The default chart type when a new chart window is opened.",
      "enum": [
        {
          "value": "candlestick",
          "description": "Candlestick"
        },
        {
          "value": "ohlc",
          "description": "OHLC Bars"
        },
        {
          "value": "line",
          "description": "Line Chart"
        },
        {
          "value": "area",
          "description": "Area Chart"
        },
        {
          "value": "heikin-ashi",
          "description": "Heikin-Ashi Candlesticks"
        }
      ]
    },
    "defaultChartGranularity": {
      "type": "integer",
      "default": 300000,
      "description": "The default chart granularity when a new chart window is opened.",
      "enum": [
        {
          "value": 60000,
          "description": "1 Minute"
        },
        {
          "value": 180000,
          "description": "3 Minutes"
        },
        {
          "value": 300000,
          "description": "5 Minutes"
        },
        {
          "value": 900000,
          "description": "15 Minutes"
        },
        {
          "value": 1800000,
          "description": "30 Minutes"
        },
        {
          "value": 3600000,
          "description": "1 Hour"
        },
        {
          "value": 7200000,
          "description": "2 Hours"
        },
        {
          "value": 14400000,
          "description": "4 Hours"
        },
        {
          "value": 28800000,
          "description": "8 Hours"
        },
        {
          "value": 43200000,
          "description": "12 Hours"
        },
        {
          "value": 86400000,
          "description": "1 Day"
        },
        {
          "value": 172800000,
          "description": "2 Days"
        },
        {
          "value": 604800000,
          "description": "7 Days"
        },
        {
          "value": 864000000,
          "description": "10 Days"
        }
      ]
    },
    "showCurrentValueLine": {
      "type": "boolean",
      "default": true
    },
    "resetZoomOnGranularityChange": {
      "title": "Reset Zoom On Granularity Change",
      "type": "boolean",
      "default": true,
      "description": "Reset the chart zoom and position when the granularity is changed."
    }
  },
  "providedServices": {
    "charts": {
      "description": "Charts package for creating plugins, studies, tools, etc.",
      "versions": {
        "0.1.0": "provideCharts"
      }
    }
  },
  "consumedServices": {
    "action-bar": {
      "versions": {
        "^0.1.0": "consumeActionBar"
      }
    }
  }
}
